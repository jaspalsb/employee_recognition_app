 <!-- LOGIN FORM -->
 <div class="container pt-5">
 	<div class="row">
	<div class="col-sm-4 offset-sm-4">
	<div class="card">
	<div class="card-body">
	{{#if error}}
				<div class="alert alert-danger alert-dismissible fade show">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<strong>Invalid</strong> Email or password.
				</div>
	{{/if}}
    <form action="/login" method="post">
        <h4>
            <label>{{loginMessage}}</label>
	    <label><font color="red">{{errorMessage}}</label><font color="black">
        </h4>    
        <h4 class="text-center">Sign in</h4>    
        <div class="form-group">
            <input type="text" class="form-control" id="inputEmail" placeholder = "Email" name="email">
        </div>
        <div class="form-group">
            <input type="password" id="inputPassword" class="form-control" placeholder = "password" name="password">
        </div>
		<a class="nav-link text-center" href="/forgotpassword">Forgot password?</a>
        <button type="submit" class="btn btn-block btn-custom text-white">Sign in</button>
    </form>
	</div>
	</div>
</div>
</div>
